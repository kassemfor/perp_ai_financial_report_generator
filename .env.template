# AI Financial Report Generator - Environment Configuration
# Copy to .env and customize for your environment

# LLM Configuration
LLM_BACKEND=ollama
LLM_MODEL=mistral:latest
LLM_BASE_URL=http://localhost:11434
LLM_API_KEY=
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=60

# API Keys (for cloud-based LLMs)
# OpenAI
OPENAI_API_KEY=sk-...

# Google Gemini
GEMINI_API_KEY=...

# Anthropic Claude
ANTHROPIC_API_KEY=...

# Company Branding
COMPANY_NAME=Financial Analytics Corp
PRIMARY_COLOR=#1f77b4
SECONDARY_COLOR=#ff7f0e
ACCENT_COLOR=#2ca02c

# File Paths
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
LOG_DIR=logs
TEMPLATE_DIR=templates

# System Settings
DEBUG=False
MAX_WORKERS=4
MAX_FILE_SIZE_MB=100

# Report Options
INCLUDE_SUMMARY=True
INCLUDE_CHARTS=True
INCLUDE_KPIS=True
CHART_TYPES=line,bar,pie
MAX_REPORT_PAGES=50
